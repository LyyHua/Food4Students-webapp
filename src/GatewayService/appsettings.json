{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "restaurantsRead": {
        "ClusterId": "restaurants",
        "Match": {
          "Path": "/restaurants/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/restaurants/{**catch-all}"
          }
        ]
      },
      "restaurantsWrite": {
        "ClusterId": "restaurants",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/restaurants/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE", "PATCH"]
        },
        "Transforms": [
          {
            "PathPattern": "api/restaurants/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "ordersRead": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "ordersWrite": {
        "ClusterId": "orders",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/orders",
          "Methods": ["POST", "PATCH"]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders"
          }
        ]
      },
      "ratesRead": {
        "ClusterId": "rates",
        "Match": {
          "Path": "/rates/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/rates/{**catch-all}"
          }
        ]
      },
      "ratesWrite": {
        "ClusterId": "rates",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/rates",
          "Methods": ["POST", "PATCH", "DELETE", "PUT"]
        },
        "Transforms": [
          {
            "PathPattern": "api/rates"
          }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "restaurants": {
        "Destinations": {
          "restaurantApi": {
            "Address": "http://restaurant-clusterip"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-clusterip"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orderApi": {
            "Address": "http://order-clusterip"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://notify-clusterip"
          }
        }
      },
      "rates": {
        "Destinations": {
          "rateApi": {
            "Address": "http://rate-clusterip"
          }
        }
      }
    }
  }
}
